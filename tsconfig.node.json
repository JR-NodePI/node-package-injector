    "src/preload/**/*",
    "src/renderer/src/types.ts",
    "./electron-builder.yml",
    "./package.json"
  ],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "types": [
      "electron-vite/node"
    ]
  }
}
